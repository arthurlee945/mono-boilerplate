{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,

    "allowJs": true,

    "declaration": false,
    "declarationMap": false
  }
}
