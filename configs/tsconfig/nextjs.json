{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,

    "allowJs": true,

    "declaration": false,
    "declarationMap": false,

    "plugins": [{ "name": "next" }],

    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "*.config.ts",
    "*.config.cjs"
  ],
  "exclude": ["node_modules"]
}
